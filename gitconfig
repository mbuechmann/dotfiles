[core]
  autocrlf = input
  editor = nvim
  excludesfile = /Users/buechmann/.gitignore_global
  safecrlf = warn
[merge]
  tool = vimdiff
[alias]
  b = checkout -b
  br = branch
  ci = commit
  co = checkout
  d = diff --word-diff=color
  dc = diff --cached --word-diff=color
  dcs = diff --cached --stat
  ds = diff --stat
  l = log
  lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
  lga = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
  pfwl = push --force-with-lease
  pp = pull --prune --progress --all
  pr = pull --rebase
  sm = merge --squash
  sm = submodule
  st = status
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[push]
  default = current
[mergetool]
  keepBackup = false
[color "diff"]
  whitespace = red reverse
[include]
  path = ~/.gitconfig.local
[user]
	email = malte.buechmann@gmail.com
	name = mbuechmann
