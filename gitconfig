[core]
  autocrlf = input
  editor = vim
  excludesFile = ~/.gitignore
  pager = delta
  safecrlf = warn
[merge]
  tool = vimdiff
[alias]
  b = checkout -b
  br = branch
  ci = commit
  co = checkout
  d = diff
  dc = diff --cached
  dcs = diff --cached --stat
  ds = diff --stat
  l = log
  lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(dim blue)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
  lga = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(dim blue)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
  pfwl = push --force-with-lease
  pp = pull --prune --progress --all --tags
  pr = pull --rebase
  sm = merge --squash
  sm = submodule
  st = status
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[push]
  default = current
[mergetool]
  keepBackup = false
[color "diff"]
  whitespace = red reverse
[include]
  path = ~/.gitconfig.local
[url "git@gitlab.com:"]
  insteadOf = https://gitlab.com/
[delta]
  line-numbers = true
  plus-color = "#012800"
  minus-color = "#340001"
  side-by-side = true
  syntax-theme = Monokai Extended
[interactive]
  diffFilter = delta --color-only
